{
  "version": 2,
  "builds": [
    {
      "src": "bin/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/bin/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 